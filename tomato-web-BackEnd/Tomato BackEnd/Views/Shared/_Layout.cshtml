
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tomato Web</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    @if (ViewContext.RouteData.Values["controller"].ToString() == "MenuList")
    {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
       
    }
    @if (ViewContext.RouteData.Values["controller"].ToString() == "ProductList")
    {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    }
    <link rel="stylesheet" href="~/plugins/timepicker/dist/jquery-clockpicker.min.css" />
    <link rel="stylesheet" href="~/plugins/flexslider/flexslider.css" />
    <link rel="stylesheet" href="~/plugins/owl-carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/plugins/owl-carousel/owl.theme.default.min.css" />
    <link rel="stylesheet" href="~/plugins/slick/slick.css" />
    <link rel="stylesheet" href="~/plugins/magnificPopup/magnific-popup.css" />
    <link rel="stylesheet" href="~/assets/style.css" />
</head>

<body>
    <!-- NAVBAR -->
    <header class="header">
        <div class="container-navbar">
            <input type="checkbox" name="" id="check" />
            <div class="logo-container">
                <img src="~/images/nav-logo.png" alt="Logo Image" class="logo" />
            </div>

            <div class="nav">
                <div class="nav-links">
                    <ul>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">
                                Home
                                <i class="fas fa-caret-down"></i>
                            </a>
                            <div class="dropdown">
                                <ul>
                                    <li class="dropdown-link"><a asp-controller="Home" asp-action="Index">home-image</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="MenuList" asp-action="Index" class="nav-link">
                                Menu
                                <i class="fas fa-caret-down"></i>
                            </a>
                            <div class="dropdown">
                                <ul>
                                    <li class="dropdown-link"><a asp-controller="MenuList" asp-action="Index">menu-list</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Reservation" asp-action="Index" class="nav-link">
                                reservation
                                <i class="fas fa-caret-down"></i>
                            </a>
                            <div class="dropdown">
                                <ul>
                                    <li class="dropdown-link"><a asp-controller="Reservation" asp-action="Index">reservation</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="About" asp-action="index" class="nav-link">
                                pages
                                <i class="fas fa-caret-down"></i>
                            </a>
                            <div class="dropdown">
                                <ul>
                                    <li class="dropdown-link"><a asp-controller="About" asp-action="index">about</a></li>
                                    <li class="dropdown-link"><a asp-controller="Account" asp-action="index">login/signup</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ProductList" asp-action="Index" class="nav-link">
                                shop
                                <i class="fas fa-caret-down"></i>
                            </a>
                            <div class="dropdown">
                                <ul>
                                    <li class="dropdown-link"><a asp-controller="ProductList" asp-action="Index">shop-full</a></li>
                                    <li class="dropdown-link"><a asp-controller="SingleProduct" asp-action="Index">shop-single</a></li>
                                    <li class="dropdown-link"><a asp-controller="Account" asp-action="Index">shop-account</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item m-right">
                            <a asp-controller="Contact" asp-action="Index" class="nav-link nav-link--2">Contact</a>
                        </li>

                        <!-- shopping -->
                        <li class="nav-item nav-item--2">
                            <a href="#" class="">
                                <div class="flex-nav">
                                    <i class="fa fa-shopping-cart fsc">
                                        <span class="cart-number">3</span>
                                        <i class="fas fa-caret-down"></i>
                                    </i>
                                </div>
                            </a>
                            <div class="dropdown dropdown-lg">
                                <ul>
                                    <div class="card-title">
                                        <h4>Shopping cart</h4>
                                    </div>

                                    <div class="card-item">
                                        <div class="card-item--image">
                                            <img src="~/images/cart-img1.jpg" alt="Card Image" />
                                        </div>
                                        <div class="card-item--article">
                                            <a href="#" class="card-item--link">Breakfast with coffee</a>
                                            <span class="card-item--price">$19.99</span>
                                            <span class="card-item--quantity">x 2</span>
                                            <i class="fa fa-times ci-close"></i>
                                        </div>
                                    </div>

                                    <div class="card-item">
                                        <div class="card-item--image">
                                            <img src="~/images/cart-img2.jpg" alt="Card Image" />
                                        </div>
                                        <div class="card-item--article">
                                            <a href="#" class="card-item--link">Chicken stew</a>
                                            <span class="card-item--price">$24.99</span>
                                            <span class="card-item--quantity">x 3</span>
                                            <i class="fa fa-times ci-close"></i>
                                        </div>
                                    </div>
                                    <div class="card-action">
                                        <span class="card-action--price">$114.95</span>
                                        <a href="#" class="btn-nav btn-primary-nav">View cart</a>
                                    </div>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="hamburger-menu-container">
                <div class="hamburger-menu">
                    <span class="bar"></span>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()
    <footer class="footer" id="footer">
        <div class="container">
            <div class="row grid-5">
                <div class="col mb-3">
                    <h1>About us</h1>
                    <p>
                        Duis leo justo, condimentum at purus eu,Aenean sed dolor sem. Etiam massa libero, auctor vitae egestas et, accumsan quis nunc.Duis leo justo, condimentum at purus eu, posuere pretium tellus.
                    </p>
                    <a href="~/about.html">Read more →</a>
                </div>
                <div class="col reach mb-3">
                    <h1>Reach us</h1>

                    @foreach (var Setting in Model.Settings)
                    {
                        <div class="footer-social-icons">
                            <a href="@Setting.Facebook"><i class="fab fa-facebook"></i></a>
                            <a href="@Setting.Twitter"><i class="fab fa-twitter"></i></a>
                            <a href="@Setting.Google"><i class="fab fa-google-plus"></i></a>
                            <a href="@Setting.YouTube"><i class="fab fa-youtube"></i></a>
                            <a href="https://www.vimeo.com"><i class="fab fa-vimeo"></i></a>
                            <a href="@Setting.Pinteres"><i class="fab fa-pinterest"></i></a>
                            <a href="@Setting.LinkIn"><i class="fab fa-linkedin"></i></a>
                        </div>
                        <div class="footer-adress">
                            <p>
                                <i class="fa fa-map-marker"></i> @Setting.Location
                            </p>
                            <p>
                                <i class="fa fa-phone"></i> Phone: @Setting.Phone
                            </p>
                            <p>
                                <i class="fa fa-envelope"></i> @Setting.Mail
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="footer-copyright">
            <div class="container">
                <p>
                    <i class="fa fa-copyright"></i> 2021.Tomato.All rights reserved. Designed with
                    <i class="fa fa-heart primary-color"></i> by HUSEYN
                </p>
            </div>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/plugins/flexslider/jquery.flexslider-min.js"></script>
    <script src="~/plugins/timepicker/dist/jquery-clockpicker.min.js"></script>
    <script src="~/plugins/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/plugins/slick/slick.min.js"></script>
    @if (ViewContext.RouteData.Values["controller"].ToString() == "MenuList")
    {

        <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.js"></script>
    }
    <script src="~/plugins/magnificPopup/jquery.magnific-popup.min.js"></script>
    <script src="~/src/slider.js"></script>
    <script src="~/src/main.js"></script>
    @if (ViewContext.RouteData.Values["controller"].ToString() == "ProductList")
    {
        <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    }
</body>
</html>
