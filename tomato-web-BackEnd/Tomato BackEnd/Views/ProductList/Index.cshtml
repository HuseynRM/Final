<section class="page-header">
    <div class="container">
        <div class="row text-center">
            <div class="col-md">
                <h2 class="heading-1">Shop List</h2>
                <p class="text-1">Tomato is a delicious restaurant website template</p>
            </div>
        </div>
    </div>
</section>

<div class="shop-content">
    <div class="container">
        <div class="row">
            <aside class="col-lg-3">
                <div class="side-widget">
                    <h5>Our Food</h5>
                    <ul class="shop-cat">
                        @foreach (var catagory in Model.ShopShopCatagorys)
                        {
                            <li>
                                <a asp-controller="ProductList" asp-action="Index" asp-route-Id="@catagory.Id">
                                    @catagory.CName (@catagory.ShopLists.Count())
                                    <i class="fa fa-caret-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </aside>
            <div class="col-lg-9">
                <div class="shop-grid grid-m-3 pb-3">
                </div>
                <div class="shop-products">
                    <div class="row">
                        @foreach (var Food in Model.ShopLists)
                        {
                            <div class="col">
                                <div class="product-info">
                                    <div class="product-img">
                                        <img src="~/images/@Food.Img" alt="Product image" />
                                    </div>

                                    <h4>
                                        <a href="#">@Food.FName</a>
                                    </h4>

                                    <div class="product-price">$@Food.Price</div>

                                    <div class="shop-meta">
                                        <a href="">
                                            <i class="fa fa-shopping-cart"></i> Add to cart
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <a href="home.html" class="btn btn-primary btn-load">Load more</a>
            </div>
        </div>
