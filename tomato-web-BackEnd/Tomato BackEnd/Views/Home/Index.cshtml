@model HomeVM 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="body">
    <section class="home" id="home">
        <div class="title-block">
            <div class="logo">
                <a href="#">
                    <img src="~/images/logo.png" alt="logo" />
                </a>
            </div>
            <h1 class="text-center">delicious food</h1>
            <h2 class="text-center">Tomato is a delitious restaurant website template</h2>
        </div>
        <div class="scroll-down hidden-xs">
            <a href="#about">
                <img src="~/images/arrow-down.png" alt="arrow" />
            </a>
        </div>
    </section>

    <section class="about" id="about">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="section-header">
                        <h1 class="heading-2">the restaurant</h1>
                        <p class="text-2">A little about us and a breif history of how we started.</p>
                    </div>
                </div>
            </div>
            <div class="row grid-3">
                <div class="col">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col hidden-sm about-photo">
                                <div class="image-thumb"><img src="~/images/@Model.RestaurantHome.HomeImg" alt="thumb image" class="img-responsive" data-mfp-src="images/pic1-full.jpg" /></div>
                            </div>
                            <div class="row-2 d-flex grid-m-2">
                                <div class="col about-photo hidden-xs">
                                    <img src="~/images/@Model.RestaurantHome.HomeImg1" alt="thumb image" class="img-responsive" data-mfp-src="images/pic2-full.jpg" />
                                </div>
                                <div class="col about-photo hidden-xs">
                                    <img src="~/images/@Model.RestaurantHome.HomeImg2" alt="thumb image" class="img-responsive" data-mfp-src="images/pic3-full.jpg" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sp">
                    <p>
                        @Model.RestaurantHome.Info1
                    </p>
                    <p>@Model.RestaurantHome.Info2</p>
                    <img src="~/images/@Model.RestaurantHome.Signature" alt="signature" />
                </div>
            </div>
        </div>
    </section>

    <section class="special" id="special">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="section-header pt-5">
                        <h1 class="heading-2 text-white">today's specials</h1>
                        <p class="text-2 text-white">A little about us and a breif history of how we started.</p>
                    </div>
                </div>
            </div>
            <!-- dsas -->
            <div class="row">
                <div class="col">
                    <div class="special-slider flexslider">
                        <div class="direction-nav hidden-sm">
                            <div class="next">
                                <a href="#">
                                    <img src="~/images/right-arrow.png" alt="right arrow" />
                                </a>
                            </div>
                            <div class="prev">
                                <a href="#">
                                    <img src="~/images/left-arrow.png" alt="left arrow" />
                                </a>
                            </div>
                        </div>
                        <ul class="slides">
                            @foreach (var special in Model.HomeSpecials)
                            {
                                <li class="list">
                                    <div class="slider-image">
                                        <img src="~/images/@special.SepialImg" alt="thumb image" />
                                    </div>
                                    <div class="slider-content">
                                        <div class="section-header">
                                            <h1 class="heading-2">@special.SpecialName</h1>
                                            <p class="text-2">@special.Text</p>
                                        </div>
                                        <p>
                                            @special.Text1
                                        </p>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Reservation section -->
    <section class="reservation" id="reservation">
        <div class="container">
            <div class="row">
                <div class="section-header">
                    <h1 class="heading-2">Reservations</h1>
                    <p class="text-2">Book a table online. Leads will reach in your email.</p>
                </div>
            </div>
            <div class="reservation-form">
                <form action="#" class="form">
                    <div class="row grid-2">
                        <div class="col">
                            <div class="form-group">
                                <label for="datepicker">Date</label>
                                <input type="text" data-toggle="datepicker" class="form-control" placeholder="Pick a date" id="datepicker" title="Please choose a date" required />
                                <i class="fa fa-calendar"></i>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="name">Your Name</label>
                                <input type="text" class="form-control" placeholder="Full Name" id="name" title="Your full name please" required />
                                <i class="fa fa-pencil-square"></i>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="timepicker">Time</label>
                                <input type="text" class="form-control" placeholder="Pick a time" id="timepicker" title="Choose preferred time" name="time" required value="" />
                                <i class="fa fa-clock"></i>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" class="form-control" placeholder="Your Email ID" id="email" title="Please enter your email ID" required />
                                <i class="fa fa-envelope"></i>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="guests">Guests</label>
                                <input type="number" class="form-control input-number–noSpinners" placeholder="How many of you" id="guests" title="Please enter number of guests" required />
                                <i class="fa fa-user"></i>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input type="text" class="form-control" placeholder="Enter your phone number" id="datepicker" title="Please enter your phone number" required />
                                <i class="fa fa-phone"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-grid">
                        <div class="reservation-btn">
                            <button type="submit" class="btn btn-primary btn-lg btn-center">Make Reservation</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="reservation-footer">
                <p>
                    You can also call:
                    <strong>+994 70 834 16 76</strong> to make a reservation.
                </p>
                <span></span>
            </div>
        </div>
    </section>

