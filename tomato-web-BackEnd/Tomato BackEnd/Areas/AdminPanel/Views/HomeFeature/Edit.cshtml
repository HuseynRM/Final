@model Features
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <input type="text" asp-for="@Model.Name" class="form-control" id="Name" placeholder="Name">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Desc">Text</label>
            <input type="text" asp-for="@Model.Desc" class="form-control" id="Desc" placeholder="Desc">
            <span asp-validation-for="@Model.Desc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.FeatureImgFile">Image</label>
            <input asp-for="@Model.FeatureImgFile" accept="image/*" class="form-control col-md-2" rows="3">
            <span asp-validation-for="@Model.FeatureImgFile" class="text-danger"></span>
        </div>
        <div class="img-box" style="position:relative;max-width:200px;background-color:black;width:200px;height:200px;max-height:200px;">
            <img class="d-block" src="~/uploads/Feature/@Model.FeatureImg" style="max-width:180px;width:180px;height:180px;max-height:180px;margin-left:10px;padding-top:20px" />

            <input type="hidden" name="Image" value="@Model.FeatureImg" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>