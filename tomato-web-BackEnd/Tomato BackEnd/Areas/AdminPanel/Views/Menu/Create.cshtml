@model MenuList
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
    List<MenuCatagory> categories = (List<MenuCatagory>)ViewBag.Categories;
}
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Price">Price</label>
            <input type="text" asp-for="@Model.Price" class="form-control" id="Price" placeholder="Price">
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <textarea asp-for="@Model.Name" class="form-control" id="Name" rows="3"></textarea>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Desc">About</label>
            <input asp-for="@Model.Desc" class="form-control col-md-2" rows="3">
            <span asp-validation-for="@Model.Desc" class="text-danger"></span>
        </div>
        
        <div class="form-group col-md-3">
            <label asp-for="@Model.MenuCatagoryId">Category</label>
            <select class="form-control" asp-for="@Model.MenuCatagoryId" asp-items="@(new SelectList(categories,"Id","Name"))">
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
