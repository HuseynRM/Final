@model ShopList
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
    List<ShopCatagory> catagories = (List<ShopCatagory>)ViewBag.Categories;
}
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.FName">Name</label>
            <input type="text" asp-for="@Model.FName" class="form-control" id="FName" placeholder="Name">
            <span asp-validation-for="@Model.FName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Price">Price</label>
            <input type="text" asp-for="@Model.Price" class="form-control" id="Price" placeholder="Price">
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.ShopCatagoryId">Category</label>
            <select class="form-control" asp-for="@Model.ShopCatagoryId" asp-items="@(new SelectList(catagories,"Id","CName"))">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ImgFile">Image</label>
            <input asp-for="@Model.ImgFile" accept="image/*" class="form-control col-md-2" rows="3">
            <span asp-validation-for="@Model.ImgFile" class="text-danger"></span>
        </div>
        <div class="img-box" style="position:relative;max-width:200px;background-color:black;width:200px;height:200px;max-height:200px;">
            <img class="d-block" src="~/uploads/Product/@Model.Img" style="max-width:180px;width:180px;height:180px;max-height:180px;margin-left:10px;padding-top:20px" />

            <input type="hidden" name="Image" value="@Model.Img" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>