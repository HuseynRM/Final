@model SpecialService
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.ServiceTitle">Title</label>
            <input type="text" asp-for="@Model.ServiceTitle" class="form-control" id="Title" placeholder="Title">
            <span asp-validation-for="@Model.ServiceTitle" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="@Model.ServiceDesc">Desc</label>
            <textarea asp-for="@Model.ServiceDesc" class="form-control" id="Text" rows="3"></textarea>
            <span asp-validation-for="@Model.ServiceDesc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ServiceIMgFile">Image</label>
            <input asp-for="@Model.ServiceIMgFile" class="form-control col-md-2" rows="3">
            <span asp-validation-for="@Model.ServiceIMgFile" class="text-danger"></span>
        </div>
        <div class="img-box" style="position:relative;max-width:200px;background-color:black;width:200px;height:200px;max-height:200px;">
            <img class="d-block" src="~/uploads/testimonial/@Model.ServiceIMg" style="max-width:180px;width:180px;height:180px;max-height:180px;margin-left:10px;padding-top:20px" />

            <input type="hidden" name="Image" value="@Model.ServiceIMg" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>